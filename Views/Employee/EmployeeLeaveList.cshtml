@model List<RoleBasedJWTMVC.Models.LeaveRequest>

@{
    ViewData["Title"] = "My Leave Requests";
}

<h2>My Leave Requests</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Reason</th>
            <th>From</th>
            <th>To</th>
            <th>Status</th>
            <th>Requested On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.Id</td>
                <td>@leave.Reason</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>
                    <span class="badge bg-@(leave.Status == RoleBasedJWTMVC.Models.LeaveStatus.Accepted ? "success" : leave.Status == RoleBasedJWTMVC.Models.LeaveStatus.Rejected ? "danger" : "warning")">
                        @leave.Status.ToString()
                    </span>
                </td>
                <td>@leave.RequestDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
