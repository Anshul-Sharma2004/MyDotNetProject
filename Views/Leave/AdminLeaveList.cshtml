@model List<RoleBasedJWTMVC.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Requests - Admin";
}

<h2>Leave Requests</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Employee</th>
            <th>Reason</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.Id</td>
                <td>@leave.EmployeeName</td>
                <td>@leave.Reason</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.Status</td>
                <td>
                    @if (leave.Status == "Pending")
                    {
                        <form method="post" asp-action="Approve" asp-controller="Leave" asp-route-id="@leave.Id" style="display:inline;">
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form method="post" asp-action="Reject" asp-controller="Leave" asp-route-id="@leave.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-info">@leave.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
