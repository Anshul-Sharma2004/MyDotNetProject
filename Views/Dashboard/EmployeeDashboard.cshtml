@{
    ViewData["Title"] = "EmployeeDashboard";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
    }

    .wrapper {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 220px;
        background-color: #2c3e50;
        padding: 20px;
        color: white;
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        overflow-y: auto;
    }

    .sidebar h2 {
        margin-bottom: 30px;
        font-size: 22px;
    }

    .sidebar ul {
        list-style-type: none;
        padding: 0;
    }

    .sidebar ul li {
        margin-bottom: 15px;
    }

    .sidebar ul li a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        display: block;
        padding: 8px 10px;
        border-radius: 5px;
        transition: background-color 0.2s ease;
    }

    .sidebar ul li a:hover {
        background-color: #34495e; /* Slightly lighter on hover */
    }

    .content {
        margin-left: 220px; /* Same as sidebar width */
        padding: 30px;
        width: calc(100% - 220px);
    }

    .dashboard-container {
        max-width: 1000px;
        margin: auto;
        padding: 20px;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .cards {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 40px;
    }

    .card {
        flex: 1;
        min-width: 280px;
        background-color: #f1f5f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    .card h3 {
        margin-bottom: 10px;
        color: #333;
    }

    .card p {
        font-size: 28px;
        font-weight: bold;
        color: #0d6efd;
    }

    .recent-activity {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }

    .recent-activity h4 {
        margin-bottom: 15px;
        color: #333;
    }

    .activity-list {
        list-style-type: none;
        padding: 0;
    }

    .activity-list li {
        padding: 10px 0;
        border-bottom: 1px solid #eee;
        color: #555;
    }

    .activity-list li:last-child {
        border-bottom: none;
    }
</style>

<div class="wrapper">
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Employee Menu</h2>
        <ul>
            <li><a asp-controller="DashboardData" asp-action="EmployeeTasks">Tasks</a></li>
            <li><a asp-controller="Leave" asp-action="RequestLeave">Leave Approval</a></li>
            <li><a asp-controller="DashboardData" asp-action="Chat">Messages</a></li>
            <li><a asp-controller="Leave" asp-action="ApprovedRequests">Approved Requests</a></li>
            <li><a asp-controller="Leave" asp-action="RejectedRequests">Rejected Requests</a></li>

            @* <li><a asp-controller="Dashboard" asp-action="Chat">Messages</a></li> *@

        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="dashboard-container">
            <div class="dashboard-header">
                @if (ViewBag.EmployeeName != null)
                {
                    <h2>Welcome, @ViewBag.EmployeeName!</h2>
                }
                else
                {
                    <h2>Welcome, Employee!</h2>
                }

                @* <p>Email: @ViewBag.EmployeeEmail</p> *@
                <p>Hereâ€™s a quick overview of your tasks and activities.</p>
            </div>

            <div class="cards">
                <div class="card">
                    <h3>No. of Task Assign</h3>
                    <p>3</p>
                </div>
                <div class="card">
                    <h3>Pending Tasks</h3>
                    <p>7</p>
                </div>
                <div class="card">
                    <h3>Completed Tasks</h3>
                    <p>15</p>
                </div>
            </div>

            <div class="recent-activity">
                <h4>Recent Activity</h4>
                <ul class="activity-list">
                    <li>Completed report for Project A.</li>
                    <li>Joined the team meeting at 10 AM.</li>
                    <li>Updated task status for Project B.</li>
                    <li>Reviewed code for the new feature.</li>
                </ul>
            </div>
        </div>
    </div>
</div>
