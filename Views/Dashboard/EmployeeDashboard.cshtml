@{
    ViewData["Title"] = "EmployeeDashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin-left: 240px;
        padding: 40px;
        flex: 1;
        background-color: #f5f7fa;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: url("/images/employeedashboard.jpg") no-repeat center center fixed; 
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        
    }

    .wrapper {
        display: flex;
        min-height: 100vh;
    }

     .sidebar {
        width: 240px;
        background-color: #2c3e50;
        color: #ecf0f1;
        padding: 25px 20px;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        overflow-y: auto;
        margin-top: 55px;
    }

    .sidebar h2 {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
        border-bottom: 1px solid #34495e;
        padding-bottom: 10px;
        text-transform: uppercase;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar ul li {
        margin-bottom: 12px;
    }

    .sidebar ul li a {
        display: block;
        padding: 10px 14px;
        color: #ecf0f1;
        font-size: 15px;
        text-decoration: none;
        border-radius: 6px;
        transition: background 0.2s ease;
    }

    .sidebar ul li a:hover {
        background-color: #1abc9c;
    }

    .content {
        margin-left: 220px; /* Same as sidebar width */
        padding: 30px;
        width: calc(100% - 220px);
    }

    .dashboard-container {
        max-width: 1000px;
        margin: auto;
        padding: 20px;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .cards {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 40px;
    }

    .card {
        flex: 1;
        min-width: 280px;
        background-color: #f1f5f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    .card h3 {
        margin-bottom: 10px;
        color: #333;
    }

    .card p {
        font-size: 28px;
        font-weight: bold;
        color: #0d6efd;
    }

    .recent-activity {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }

    .recent-activity h4 {
        margin-bottom: 15px;
        color: #333;
    }

    .activity-list {
        list-style-type: none;
        padding: 0;
    }

    .activity-list li {
        padding: 10px 0;
        border-bottom: 1px solid #eee;
        color: #555;
    }

    .activity-list li:last-child {
        border-bottom: none;
    }
</style>
</head>
<body>
    


<div class="wrapper">
    <!-- Sidebar -->
    <div class="sidebar">
       <h2>
    <img src="/images/employee.png" alt="Admin Icon" style="width:30px; height:30px; vertical-align:middle; margin-right:10px;">
    Employee
</h2>

        <ul>
           <li>
                <a asp-controller="DashboardData" asp-action="EmployeeTasks">
                    <img src="/images/Employeetask1.png" alt="Tasks" style="width:20px; height:20px; vertical-align:middle; margin-right:8px;">
                    Tasks
                </a>
            </li>

             <li>
                <a asp-controller="Leave" asp-action="RequestLeave">
                    <img src="/images/EmployeeLeave1.png" alt="Tasks" style="width:20px; height:20px; vertical-align:middle; margin-right:8px;">
                    LeaveRequest
                </a>
            </li>
            <li>
                <a asp-controller="DashboardData" asp-action="Chat">
                    <img src="/images/Employeemessage1.png" alt="Tasks" style="width:20px; height:20px; vertical-align:middle; margin-right:8px; color:red">
                    Message
                </a>
            </li>
            <li>
                <a asp-controller="Leave" asp-action="EmployeeLeaveStatus">
                    <img src="/images/EmployeeleaveStatus.png" alt="Tasks" style="width:20px; height:20px; vertical-align:middle; margin-right:8px;">
                    LeaveStatus
                </a>
            </li>

           

          
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="dashboard-container">
            <div class="dashboard-header" style="color: #0d6efd;">
              <h2>Welcome @User.Identity.Name</h2>

           
            </div>

            <div class="cards">
                <div class="card">
                    <h3>No. of Task Assign</h3>
                    <p>3</p>
                </div>
                <div class="card">
                    <h3>Pending Tasks</h3>
                    <p>7</p>
                </div>
                <div class="card">
                    <h3>Completed Tasks</h3>
                    <p>15</p>
                </div>
            </div>

            <div class="recent-activity">
                <h4>Recent Activity</h4>
                <ul class="activity-list">
                    <li>Completed report for Project A.</li>
                    <li>Joined the team meeting at 10 AM.</li>
                    <li>Updated task status for Project B.</li>
                    <li>Reviewed code for the new feature.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

</body>
</html>