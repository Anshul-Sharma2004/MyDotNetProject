@model List<RoleBasedJWTMVC.Models.Employee>


<div class="chat-container">
    <!-- Left Section: Chat Form -->
    <div class="chat-left">
        <h2>Select Emp to Chat With</h2>
        <form id="chatForm" method="get" asp-controller="DashboardData" asp-action="ChatBox">
            <label for="EmpSelect">Choose an Emp:</label><br />
            <select id="EmpSelect" name="EmpId" required>
                <option value="">-- Select Emp --</option>
                @foreach (var Emp in Model)
                {
                    <option value="@Emp.Id">@Emp.Name (@Emp.Email)</option>
                }
            </select>
            <br />
            <button type="submit">Start Chat</button>
        </form>

        <div class="dashboard-link">
              <a asp-controller="Dashboard" asp-action="EmployeeDashboard">Go to Employee Dashboard</a>
        </div>
    </div>

    <!-- Right Section: Chat List -->
    <div class="chat-right">
        <h2>Chat List</h2>
        <ul class="chat-list">
            @foreach (var Emp in Model)
            {
                <li>@Emp.Name<br /><small>@Emp.Email</small></li>
            }
        </ul>
    </div>
</div>

<style>
   body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f8f9fb;
    margin: 0;
    padding: 40px 20px 20px; /* added top padding to push content below header */
    color: #2c3e50;
    min-height: 100vh;
}

nav.navbar {
    margin-top: 0; /* reset if needed */
    box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
    z-index: 1000;
    position: fixed;
    top: 0;
    background-color: #fff;
}

/* Main container - flexible layout */
.chat-container {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;
    justify-content: center;
    width: 1100px;
    margin-top: 10px;
}

/* Left and Right panels */
.chat-left, .chat-right {
    background: #fff;
    padding: 30px 35px;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgb(0 0 0 / 0.08);
    flex: 1 1 400px;
    min-width: 320px;
    transition: box-shadow 0.3s ease;
}

.chat-left:hover, .chat-right:hover {
    box-shadow: 0 8px 30px rgb(0 0 0 / 0.12);
}

h2 {
    font-weight: 700;
    font-size: 1.8rem;
    margin-bottom: 20px;
    color: #34495e;
    letter-spacing: 0.03em;
}

/* Form label and select */
label {
    font-weight: 600;
    font-size: 1rem;
    color: #34495e;
    margin-bottom: 10px;
    display: block;
}

#chatForm select {
    width: 100%;
    padding: 12px 16px;
    border-radius: 8px;
    border: 1.8px solid #ced4da;
    font-size: 1.1rem;
    color: #2c3e50;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    box-shadow: inset 0 1px 3px rgb(0 0 0 / 0.05);
}

#chatForm select:focus {
    outline: none;
    border-color: #1d72b8;
    box-shadow: 0 0 8px #1d72b8aa;
}

/* Button styling */
#chatForm button {
    background-color: #1d72b8;
    border: none;
    color: white;
    padding: 12px 22px;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    margin-top: 10px;
    width: 100%;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 10px rgb(29 114 184 / 0.5);
}

#chatForm button:hover {
    background-color: #145a86;
    box-shadow: 0 6px 14px rgb(20 90 134 / 0.7);
}

/* Chat list */
.chat-list {
    list-style: none;
    padding: 0;
    margin: 0;
    max-height: 460px;
    overflow-y: auto;
}

.chat-list li {
    background: #ecf0f1;
    padding: 16px 20px;
    border-radius: 10px;
    margin-bottom: 14px;
    box-shadow: 0 3px 8px rgb(0 0 0 / 0.06);
    transition: background-color 0.25s ease, transform 0.2s ease;
    cursor: default;
}

.chat-list li:hover {
    background-color: #d6e4ff;
    transform: translateX(4px);
}

.chat-list small {
    font-size: 0.85rem;
    color: #7f8c8d;
    display: block;
    margin-top: 4px;
}

/* Dashboard link */
.dashboard-link {
    margin-top: 28px;
    text-align: center;
}

.dashboard-link a {
    font-weight: 600;
    font-size: 1rem;
    color: #1d72b8;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    padding-bottom: 3px;
    transition: border-color 0.3s ease;
}

.dashboard-link a:hover {
    border-bottom: 2px solid #1d72b8;
    color: #145a86;
}

</style>
