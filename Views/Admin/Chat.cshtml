@model List<RoleBasedJWTMVC.Models.Employee>


<div class="chat-container">
    <!-- Left Section: Chat Form -->
    <div class="chat-left">
        <h2>Select Employee to Chat With</h2>
        <form id="chatForm" method="get" action="/Admin/ChatBox">
            <label for="employeeSelect">Choose an Employee:</label><br />
            <select id="employeeSelect" name="employeeId" required>
                <option value="">-- Select Employee --</option>
                @foreach (var emp in Model)
                {
                    <option value="@emp.Id">@emp.Name (@emp.Email)</option>
                }
            </select>
            <br>
            <button type="submit">Start Chat</button>
        </form>

        <div class="dashboard-link">
            <a asp-controller="Dashboard" asp-action="AdminDashboard">Go to Admin Dashboard</a>
        </div>
    </div>

    <!-- Right Section: Chat List -->
    <div class="chat-right">
        <h2>Chat List</h2>
        <ul class="chat-list">
            @foreach (var emp in Model)
            {
                <li>@emp.Name<br /><small>@emp.Email</small></li>
            }
        </ul>
    </div>
</div>

