@model List<RoleBasedJWTMVC.Models.LeaveRequest>

<h2>Leave Requests</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div>@TempData["SuccessMessage"]</div>
}
<style>
    h2 {
        font-size: 26px;
        margin-bottom: 20px;
        color: #2c3e50;
        font-weight: bold;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #dddddd;
    }

    thead {
        background-color: #34495e;
        color: #ffffff;
    }

    tbody tr:hover {
        background-color: #f9f9f9;
    }

    .btn-approve {
        background-color: #2ecc71;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 5px;
    }

    .btn-reject {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-approve:hover {
        background-color: #27ae60;
    }

    .btn-reject:hover {
        background-color: #c0392b;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        padding: 12px;
        margin-bottom: 20px;
        border: 1px solid #c3e6cb;
        border-radius: 4px;
    }
</style>


<table>
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Email</th>
            <th>Reason</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Requested On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.EmployeeName</td>
                <td>@leave.EmployeeEmail</td>
                <td>@leave.Reason</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.Status.ToString()</td>
                <td>@leave.RequestDate.ToShortDateString()</td>
                <td>
                    @if (leave.Status == RoleBasedJWTMVC.Models.LeaveStatus.Pending)
                    {
                        <form asp-action="Approve" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@leave.Id" />
                            <button type="submit">Approve</button>
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@leave.Id" />
                            <button type="submit">Reject</button>
                        </form>
                    }
                    else
                    {
                        @* <span>No actions available</span> *@
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
